{
  "expo": {
    "name": "innershield",
    "slug": "innershield",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/iconoapp.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png", 
      "resizeMode": "cover",
      "backgroundColor": "#B39DDB"
    },
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/iconoapp.png",
      "bundleIdentifier": "com.innershield.app",
      "buildNumber": "1",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSMicrophoneUsageDescription": "Esta aplicación necesita acceso al micrófono para funciones de respiración guiada.",
        "NSCameraUsageDescription": "Esta aplicación puede necesitar acceso a la cámara para funciones futuras.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.innershield.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "01b3db52-d9ca-40b9-a32e-d68a1a96fd53"
      }
    },
    "owner": "vitandes",
    "plugins": [ 
      "@react-native-firebase/app",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES": true
          }
        }
      ]
    ]
  }
}